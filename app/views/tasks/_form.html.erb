<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">
  <div class="field col-lg-4">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field col-lg-2">
    <%= f.label :priority %>
    <%= f.select :priority, options_for_select(1..5)%>
  </div>

  <div class="field col-lg-2">
    <%= f.label :status %>
    <%= f.select :status, options_for_select(%w(open closed resolved))%>
  </div>

  <div class="actions col-lg-2">
    <%= f.submit %>
  </div>
  </div>
</div>
<% end %>
